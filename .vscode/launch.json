{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug Streamlit within container",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": "${env:FRONTEND_DEBUGGING_PORT}"
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/src"
        }
      ]
    }
  ]
}
